<UserControl x:Class="Flow.Launcher.Plugin.Snippets.SettingPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Flow.Launcher.Plugin.Snippets"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">

    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal" Margin="10">
            <Button Click="ButtonOpenManage_OnClick" Margin="10,0,10,0"
                    Content="{DynamicResource snippets_plugin_manage_snippets}">
            </Button>
            <Button Click="ButtonExport_OnClick" Margin="10,0,10,0"
                    Content="{DynamicResource snippets_plugin_export}">
            </Button>
            <Button Click="ButtonImport_OnClick" Margin="10,0,10,0"
                    Content="{DynamicResource snippets_plugin_import}">
            </Button>
            <Button Click="ButtonClear_OnClick" Margin="10,0,10,0"
                    Content="{DynamicResource snippets_plugin_clear}">
            </Button>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="10">

            <Label Width="180" VerticalAlignment="Center"
                   Content="{DynamicResource snippets_plugin_storage_mode}">
            </Label>

            <RadioButton Name="RadioButtonJsonSetting" Margin="10,0,10,0"
                         GroupName="StorageMode"
                         VerticalAlignment="Center" Checked="RadioButtonJsonSetting_OnChecked"
                         Content="{DynamicResource snippets_plugin_storage_json_setting}">
            </RadioButton>
            <RadioButton Name="RadioButtonSqlite" Margin="10,0,10,0"
                         GroupName="StorageMode"
                         VerticalAlignment="Center" Checked="RadioButtonSqlite_OnChecked"
                         Content="{DynamicResource snippets_plugin_storage_sqlite}">
            </RadioButton>
            <Button Click="ButtonRestart_OnClick" Margin="10,0,10,0"
                    Content="{DynamicResource snippets_plugin_restart_app}">
            </Button>
        </StackPanel>
    </StackPanel>

</UserControl>